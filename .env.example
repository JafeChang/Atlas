# Atlas 环境配置文件示例
# 复制为 .env 并根据实际情况修改

# 基础环境配置
ATLAS_ENV=development
ATLAS_DEBUG=false
ATLAS_LOG_LEVEL=INFO

# 数据存储路径配置
ATLAS_DATA_DIR=./data
ATLAS_CONFIG_DIR=./config
ATLAS_LOG_DIR=./logs

# 数据库配置
ATLAS_DATABASE_URL=sqlite:///data/atlas.db
ATLAS_DATABASE_POOL_SIZE=5
ATLAS_DATABASE_MAX_OVERFLOW=10

# 采集配置
ATLAS_USER_AGENT=Atlas/0.1.0 (Information Aggregation System; +https://github.com/your-username/atlas)
ATLAS_REQUEST_TIMEOUT=30
ATLAS_MAX_CONCURRENT_REQUESTS=3
ATLAS_RATE_LIMIT_DELAY=300  # 5分钟

# LLM 配置
ATLAS_LLM_PROVIDER=local  # local, openai, anthropic
ATLAS_LLM_MODEL=qwen2.5:7b  # 本地模型名称
ATLAS_LLM_BASE_URL=http://localhost:11434
ATLAS_LLM_TIMEOUT=60
ATLAS_LLM_MAX_WORKERS=1

# OpenAI 配置 (如果使用)
ATLAS_OPENAI_API_KEY=your-openai-api-key-here
ATLAS_OPENAI_BASE_URL=https://api.openai.com/v1
ATLAS_OPENAI_MODEL=gpt-4

# Anthropic 配置 (如果使用)
ATLAS_ANTHROPIC_API_KEY=your-anthropic-api-key-here
ATLAS_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 调度配置
ATLAS_SCHEDULER_ENABLED=true
ATLAS_SCHEDULER_TIMEZONE=UTC
ATLAS_SCHEDULER_MAX_WORKERS=3

# 监控配置
ATLAS_MONITORING_ENABLED=true
ATLAS_METRICS_PORT=8080
ATLAS_HEALTH_CHECK_INTERVAL=60

# 安全配置
ATLAS_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ATLAS_MAX_REQUEST_SIZE=10485760  # 10MB

# 开发配置
ATLAS_RELOAD=true
ATLAS_HOT_RELOAD=true