# PostgreSQL本地开发环境配置
# 此文件包含敏感信息，不应提交到Git
# 复制此文件为.env.local并填入实际值

# PostgreSQL数据库配置
ATLAS_DATABASE_TYPE=postgresql
ATLAS_DATABASE_HOST=localhost
ATLAS_DATABASE_PORT=5432
ATLAS_DATABASE_USER=atlas_user
ATLAS_DATABASE_PASSWORD=your_secure_password_here
ATLAS_DATABASE_NAME=atlas_db

# PostgreSQL连接池配置
ATLAS_DATABASE_POOL_SIZE=10
ATLAS_DATABASE_MAX_OVERFLOW=20
ATLAS_DATABASE_POOL_TIMEOUT=30
ATLAS_DATABASE_POOL_RECYCLE=3600

# Redis配置 (TASK-003)
ATLAS_REDIS_HOST=localhost
ATLAS_REDIS_PORT=6379
ATLAS_REDIS_DB=0
# ATLAS_REDIS_PASSWORD=your_redis_password_here  # 可选，生产环境推荐
ATLAS_REDIS_MAX_CONNECTIONS=10

# Celery配置 (TASK-003)
ATLAS_CELERY_BROKER_URL=redis://localhost:6379/0
ATLAS_CELERY_RESULT_BACKEND=redis://localhost:6379/1
ATLAS_CELERY_TASK_TRACK_STARTED=true
ATLAS_CELERY_TASK_TIME_LIMIT=3600
ATLAS_CELERY_TASK_SOFT_TIME_LIMIT=3000
ATLAS_CELERY_WORKER_PREFETCH_MULTIPLIER=4
ATLAS_CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
